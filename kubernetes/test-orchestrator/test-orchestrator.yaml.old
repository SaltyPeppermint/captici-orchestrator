---
apiVersion: v1
kind: Namespace
metadata:
  name: cdpb-tester
  labels:
    app.kubernetes.io/name: cdpb-tester
    app.kubernetes.io/instance: cdpb-tester
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: test-orchestrator
  namespace: cdpb-tester
  labels:
    app: test-orchestrator
spec:
  replicas: 1
  selector:
    matchLabels:
      app: test-orchestrator
  template:
    metadata:
      labels:
        app: test-orchestrator
    spec:
      containers:
        - name: test-orchestrator
          image: kube001.informatik.intern.uni-leipzig.de:30005/nicole/test-orchestrator:latest
          ports:
            - containerPort: 8000
          imagePullPolicy: Always
      imagePullSecrets:
        - name: regcred
---
apiVersion: v1
kind: Service
metadata:
  name: test-orchestrator
  namespace: cdpb-tester
spec:
  type: NodePort
  selector:
    app: test-orchestrator
  ports:
    - nodePort: 30104
      port: 8000
      protocol: TCP
      targetPort: 8000
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: test-orchestrator
  namespace: cdpb-tester
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
spec:
  ingressClassName: nginx
  rules:
  - http:
      paths:
      - path: /testpath
        pathType: Prefix
        backend:
          service:
            name: web-example-svc
            port:
              number: 80

